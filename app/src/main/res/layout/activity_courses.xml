<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/enrolledCoursesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enrolled Courses"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- List of Courses -->
    <TextView
        android:id="@+id/course1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course 1"
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/course2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course 2"
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/course3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course 3"
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <!-- Buttons at the Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/homeScreenButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home Screen" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Log Out" />
    </LinearLayout>

</LinearLayout>
